# MoonYetis Casino MCP Server Configuration
# Copy this to .env and configure with your actual values

# ===============================
# DATABASE CONFIGURATION
# ===============================
DB_HOST=168.231.124.18
DB_PORT=5432
DB_NAME=moonyetis_casino
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL_MODE=require

# ===============================
# FRACTAL BITCOIN API CONFIGURATION
# ===============================
UNISAT_API_KEY=your_unisat_api_key_here
FRACTAL_NETWORK=mainnet
FRACTAL_API_URL=https://fractal-api.unisat.io
FRACTAL_INDEXER_URL=https://fractal-indexer.unisat.io

# ===============================
# MOONYETIS TOKEN CONFIGURATION
# ===============================
MOONYETIS_TOKEN_SYMBOL=MY
MOONYETIS_CONTRACT_ADDRESS=your_contract_address
HOUSE_WALLET_ADDRESS=your_house_wallet_address
HOUSE_WALLET_PRIVATE_KEY=your_house_private_key_here

# ===============================
# SECURITY CONFIGURATION
# ===============================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
API_RATE_LIMIT=1000
SESSION_SECRET=your_session_secret_here

# ===============================
# MONITORING & ALERTING
# ===============================
LOG_LEVEL=info
ENABLE_SECURITY_MONITORING=true
ALERT_EMAIL=admin@moonyetis.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook
MAX_BET_ALERT_THRESHOLD=1000
RAPID_BETTING_THRESHOLD=10

# ===============================
# REDIS CONFIGURATION (Optional)
# ===============================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
CACHE_TTL=3600

# ===============================
# EXTERNAL API KEYS
# ===============================
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret
OKX_PASSPHRASE=your_okx_passphrase

# ===============================
# DEVELOPMENT SETTINGS
# ===============================
NODE_ENV=production
PORT=3001
DEBUG_MODE=false
ENABLE_CORS=true

# ===============================
# BACKUP & RECOVERY
# ===============================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=moonyetis-backups
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# ===============================
# CASINO SPECIFIC SETTINGS
