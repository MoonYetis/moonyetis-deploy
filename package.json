{
  "name": "moonyetis-backend",
  "version": "1.0.0",
  "description": "Complete blockchain backend API for MoonYetis Slot Machine with Fractal Bitcoin and BRC-20 MOONYETIS token integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll=false --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "reset-db": "node scripts/reset-db.js",
    "logs": "tail -f logs/combined.log",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "security-audit": "npm audit --audit-level moderate",
    "frontend:serve": "cd frontend && python3 -m http.server 8080"
  },
  "keywords": [
    "moonyetis",
    "slot-machine",
    "fractal-bitcoin",
    "brc-20",
    "cryptocurrency",
    "gaming",
    "casino",
    "api",
    "backend",
    "nodejs",
    "express",
    "blockchain",
    "provably-fair",
    "real-gambling",
    "unisat",
    "okx-wallet"
  ],
  "author": "MoonYetis Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MoonYetis/moonyetis-backend.git"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.3",
    "cors": "^2.8.5",
    "cron": "^2.3.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.18.1",
    "express-validator": "^6.15.0",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.16.2",
    "redis": "^4.6.7",
    "sequelize": "^6.31.1",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
