                        e.stopPropagation();
                        console.log('üéØ LINES DOWN CLICKED - Current lines:', gameState.activeLines);
                        if (window.audioManager) window.audioManager.playSound('click');
                        window.adjustLinesGlobal(-1);
                        return false;
                    };
                    console.log('‚úÖ linesDown handler bound AND ENABLED');
                }
                
                if (autoSpinBtn) {
