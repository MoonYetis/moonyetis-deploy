# MoonYetis Production Environment Configuration
# Copy this file to .env.production and configure with your values

# ================================
# üåê DOMAIN CONFIGURATION
# ================================
DOMAIN=moonyetis.com
EMAIL=admin@moonyetis.com

# ================================
# üîó FRACTAL BITCOIN MAINNET
# ================================
FRACTAL_API_KEY=your_fractal_api_key_here
FRACTAL_NETWORK=mainnet
FRACTAL_API_URL=https://fractal-api.unisat.io
FRACTAL_INDEXER_URL=https://fractal-indexer.unisat.io

# ================================
# üè¶ DATABASE CONFIGURATION
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=moonyetis_slots
DB_USER=moonyetis_user
DB_PASSWORD=your_secure_database_password_here

# ================================
# üî¥ REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# ================================
# üîê SECURITY SECRETS
# ================================
JWT_SECRET=your_64_character_jwt_secret_here
SESSION_SECRET=your_64_character_session_secret_here
MASTER_KEY_FILE=.secure/master.key
CREDENTIALS_FILE=.secure/credentials.enc

# ================================
# üí∞ HOUSE WALLET (MAINNET)
# ================================
HOUSE_WALLET_ADDRESS=bc1_your_mainnet_wallet_address_here
HOUSE_WALLET_PRIVATE_KEY=encrypted_in_credentials_file
HOUSE_WALLET_PUBLIC_KEY=your_public_key_here

# ================================
# üé∞ GAME CONFIGURATION
# ================================
MIN_BET=1
MAX_BET=1000
HOUSE_EDGE=0.04
RTP=0.96
JACKPOT_ENABLED=true
JACKPOT_CONTRIBUTION_RATE=0.01

# ================================
# üö¶ RATE LIMITING
# ================================
RATE_LIMIT_GENERAL=1000
RATE_LIMIT_API=300
RATE_LIMIT_TRANSACTIONS=50
RATE_LIMIT_GAMES=200

# ================================
# üìä MONITORING & ALERTING
# ================================
DATADOG_API_KEY=your_datadog_api_key_here
SENTRY_DSN=your_sentry_dsn_here

# ================================
# üíæ BACKUP CONFIGURATION
# ================================
BACKUP_S3_BUCKET=moonyetis-backups
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# ================================
# ‚òÅÔ∏è CDN CONFIGURATION
# ================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here

# ================================
# üîî NOTIFICATION SETTINGS
# ================================
SLACK_WEBHOOK=your_slack_webhook_url_here
DISCORD_WEBHOOK=your_discord_webhook_url_here
NOTIFICATION_EMAIL=alerts@moonyetis.com

# ================================
# üõ°Ô∏è SECURITY SETTINGS
# ================================
NODE_ENV=production
HTTPS_PORT=3443
ENABLE_HSTS=true
ENABLE_CSP=true
ENABLE_FRAME_OPTIONS=true
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ================================
# üìà PERFORMANCE SETTINGS
# ================================
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=10000
QUERY_TIMEOUT=30000
CACHE_TTL=3600

# ================================
# üö® ALERT THRESHOLDS
# ================================
HOUSE_WALLET_LOW_BALANCE_ALERT=10000
HIGH_WITHDRAWAL_RATE_ALERT=100000
SUSPICIOUS_ACTIVITY_THRESHOLD=10
BALANCE_CHECK_INTERVAL=300000
MEMORY_USAGE_ALERT=80
CPU_USAGE_ALERT=75
DISK_USAGE_ALERT=85

# ================================
# üîß OPERATIONAL SETTINGS
# ================================
LOG_LEVEL=info
LOG_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=90
MAINTENANCE_MODE=false