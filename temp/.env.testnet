# MoonYetis Testnet Configuration
NODE_ENV=development
PORT=3000

# Testnet specific settings
FRACTAL_NETWORK=testnet
FRACTAL_API_URL=https://mempool-testnet.fractal.io/api
UNISAT_API_URL=https://fractal-testnet.unisat.io/api

# Session configuration
SESSION_SECRET=moonyetis-testnet-secret-key-12345
SESSION_DOMAIN=localhost

# Database (opcional para testnet)
DATABASE_URL=postgresql://moonyetis:testnet_password@localhost:5432/moonyetis_testnet

# Wallet configuration para testnet
HOUSE_WALLET_ADDRESS=tb1qtest123456789abcdefghijklmnopqrstuvwxyz
HOUSE_WALLET_PRIVATE_KEY=TESTNET_PRIVATE_KEY_HERE

# Rate limiting (m√°s permisivo en testnet)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS para testnet
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging level
LOG_LEVEL=debug

# Testnet flags
ENABLE_VERBOSE_LOGGING=true
ENABLE_DETAILED_ERRORS=true
SKIP_SIGNATURE_VERIFICATION=false

# Game configuration for testing
MIN_BET_AMOUNT=1000
MAX_BET_AMOUNT=100000
DEFAULT_BALANCE=1000000

# API timeouts (en milisegundos)
API_TIMEOUT=15000
WALLET_CONNECTION_TIMEOUT=30000

# Test specific settings
ENABLE_TEST_ROUTES=true
ALLOW_MOCK_SIGNATURES=false